<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AdapterView及其子类"
        android:layout_gravity="center_horizontal"
        android:textAllCaps="false"
        android:textSize="20sp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button1"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:text="使用ArrayAdapterView创建ListView"
        android:textAllCaps="false"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:text="使用SimpleAdapterView创建ListView"
        android:textAllCaps="false"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button3"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:text="自动完成文本框（AutoCompleteTextView）"
        android:textAllCaps="false"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button4"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:text="可展开的列表组件（ExpandableListView）"
        android:textAllCaps="false"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button5"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:text="自动播放的图片库（AdapterViewFlipper）"
        android:textAllCaps="false"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button6"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:text="StackView的功能与用法"
        android:textAllCaps="false"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button7"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:text="RecyclerView组件"
        android:textAllCaps="false"/>

</LinearLayout>